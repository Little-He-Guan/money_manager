<Page
    x:Class="main_GUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:main_GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:Name="Main_Menu"
                    Loaded="Main_Menu_Loaded"
                    SelectionChanged="Main_Menu_SelectionChanged"               
                    BackRequested="Main_Menu_BackRequested"
                    IsBackEnabled="True">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Emoji2" Content="Current State" Tag="State_Page"/>
            <NavigationViewItem Icon="NewFolder" Content="Create a New System" Tag="Create_System_Page" />
            <NavigationViewItem Icon="Save" Content="Save to File" Tag="Save_Page"/>
            <NavigationViewItem Icon="Add" Content="Add an Event" Tag="Add_Event_Page"/>
            <NavigationViewItem Icon="Manage" Content="Manage Events" Tag="Find_Event_Page"/>
            <NavigationViewItem Icon="Play" Content="Run Simulation" Tag="Run_Sim_Page"/>
            <NavigationViewItem Icon="Library" Content="Check Log" Tag="Log_Page"/>
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame"
               Padding="12,0,12,24">

        </Frame>
    </NavigationView>

</Page>
